# ===========================================
# PAYMENT SYSTEM - LOCAL DEVELOPMENT
# ===========================================
# Copy this file to .env for local development
# This configuration uses LocalStack for AWS services simulation

# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8088

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database Settings (Docker)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=payment_system
DB_SSL=false

# ===========================================
# AWS CONFIGURATION (LocalStack)
# ===========================================

# LocalStack Endpoints (Comment out for real AWS)
AWS_ENDPOINT=http://localhost:4566
SNS_ENDPOINT=http://localhost:4566
SQS_ENDPOINT=http://localhost:4566

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials (Test credentials for LocalStack)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# ===========================================
# SNS CONFIGURATION
# ===========================================

# SNS Topic ARN (LocalStack format)
PAYMENT_EVENTS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:payment-events

# ===========================================
# SQS CONFIGURATION
# ===========================================

# SQS Queue URLs (LocalStack format)
SQS_QUEUE_URL=http://localhost:4566/000000000000/payment-events
SQS_PROCESSING_QUEUE_URL=http://localhost:4566/000000000000/payment-processing-queue
SQS_WEBHOOK_QUEUE_URL=http://localhost:4566/000000000000/payment-webhook-queue
SQS_ANALYTICS_QUEUE_URL=http://localhost:4566/000000000000/payment-analytics-queue
SQS_NOTIFICATION_QUEUE_URL=http://localhost:4566/000000000000/payment-notification-queue
SQS_DLQ_URL=http://localhost:4566/000000000000/payment-dlq

# ===========================================
# TEMPORAL CONFIGURATION
# ===========================================

# Temporal Server Address (Docker)
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=payment-processing

# ===========================================
# REDIS CONFIGURATION
# ===========================================

# Redis Settings (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================

# Webhook Secret for HMAC validation
WEBHOOK_SECRET=test-webhook-secret-change-in-production

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features for gradual rollout
ENABLE_SNS_PUBLISHING=true
ENABLE_SQS_CONSUMER=true
ENABLE_TEMPORAL_WORKFLOWS=false
ENABLE_LAMBDA_PROCESSING=false

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Level (error, warn, info, debug, verbose)
LOG_LEVEL=debug

